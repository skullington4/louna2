generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Items {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imageName   String
  title       String
  collection  String
  link1       String
  link2       String
  createdAt   DateTime   @default(now())

}

model Collections {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  imageName     String
  archived      Boolean    @default(false)
  createdAt     DateTime   @default(now())
}